            <kind>1</kind>
            <string>///Begin Step
scr_item_movecollide();

//Randomize pickup sound
var ind, soundtoplay;
ind = irandom(1);
if (ind == 0) soundtoplay = snd_item_pickup_1;
else soundtoplay = snd_item_pickup_2;

//Spin animation
if (!grounded &amp;&amp; !held_dog)
    {
    if (held_player)
        {
        buried = false;
        image_angle += 5 * obj_player.movedir_x;
        }
    else image_angle += 15;
    }

//Audio
if (!mute_sfx &amp;&amp; !held_player &amp;&amp; !held_dog &amp;&amp; grounded &amp;&amp; yprevious &lt; y)
    {
    audio_play_sound(snd_snow_bone, 10, false);
    }

//Buried state
if (grounded &amp;&amp; !buried)
    {
    depth = 1000001;
    y += 2;
    buried = true;
    thrown = false;
    }

//Pickup
if (!menu_open &amp;&amp; !held_player &amp;&amp; player_here &amp;&amp; input_padD_p 
    &amp;&amp; obj_player.playerstate != STATE_PLAYER.combat 
    &amp;&amp; obj_player.playerstate != STATE_PLAYER.carry)
    {
    audio_play_sound(soundtoplay, 10, false);
    held_player = true;
    buried = false;
    }

//Carry &amp; Throw
if (!menu_open &amp;&amp; held_player)
    {
    held_dog = false;
    with (my_arrow)
        {
        image_alpha = 0;
        show_arrow = false;
        }
    if (input_B2_p &amp;&amp; obj_player.playerstate != STATE_PLAYER.pet)
        {
        show_throw_prompt = false;
        audio_play_sound(snd_throw, 10, false);
        held_player = false;
        hspd = obj_player.movedir_x * 3;
        vspd = -6;
        thrown = true;
        with (obj_player) 
            {
            drink_delay = true;
            alarm_set(4,6); 
            }
        with (obj_dog) { alarm_set(3,6); } 
        }
    else
        {
        x = obj_player.x + (obj_player.movedir_x * 3);
        y = obj_player.y + 4;
        }
    }
else if (instance_exists(obj_dog) &amp;&amp; held_dog)
    {
    with (obj_dog)
        {
        pet_delay = true;
        }
    with (my_arrow)
        {
        image_alpha = 0;
        show_arrow = false;
        }
    if (input_padD_p &amp;&amp; place_meeting(x, y, obj_player))
        {
        audio_play_sound(soundtoplay, 10, false);
        held_dog = false;
        held_player = true;
        with (obj_dog) 
            {
            alarm_set(7,15);
            }
        alarm_set(0, 10);
        }
    else
        {
        x = obj_dog.x + (obj_dog.movedir_x * 5);
        y = obj_dog.y;
        }
    }
else
    { 
    if (obj_player.playerstate != STATE_PLAYER.combat) scr_item_show_arrow();
    }
</string>
